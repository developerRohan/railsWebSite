
<h3 class="center">Edit Your Account</h3>
<div class="errors">
	<% if @user.errors.any? %>
		<h2>the following errors have been addressed</h2>
		<ul>
			<% @user.errors.full_messages.each do|msg| %>
			<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>
</div>

<div class="row">
	<div class="col-xs-12">
		<%= form_for @user do |f| %>
			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :username %>
				</div>
				<div class="col-sm-8">
					<%= f.text_field :username, class: "form-control", placeholder: "what's your identity", autofocus: true %>
				</div>
			</div>
			<br><br><br><br>
			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :email %>
				</div>
				<div class="col-sm-8">
					<%= f.email_field :email, class: "form-control", placeholder: "your email id" %>
				</div>
			</div>
			<br><br><br><br>
			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :password %>
				</div>
				<div class="col-sm-8">
					<%= f.password_field :password, class: "form-control", placeholder: "enter password" %>
				</div>
			</div>
			<br><br>
			<p style="margin-left:500px">
				<%= f.submit"updateAccount" ,class: 'btn btn-primary btn-lg' %>
			</p>
		<% end %>
	</div>
</div>
